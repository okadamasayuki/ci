<div class="container">
  <h3> 新規メモ作成 </h3>
  <%= form_tag("/create") do %>
    <div class="form-group">
      <%= label_tag "form_title", "要約" %>
      <%= text_field :memos, :title ,class:"form-control" ,id:"form_title", placeholder:"title"%>
    </div>

    <div class="form-group">
      <%=  label_tag "form_body", "具体的なメモ内容" %>
      <%= text_field :memos, :body ,class:"form-control",id:"form_body", placeholder:"content"%>
    </div>

    <%= submit_tag "送信" ,class:"btn btn-primary" %>
  <% end %>

</div>
